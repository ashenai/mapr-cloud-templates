{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "maprvmName": {
      "type": "string"
    },
    "maprnicName": {
      "type": "string"
    },
    "instanceType": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "string"
    },
    "maprimageName": {
      "type": "string"
    },
    "maprosDiskName": {
      "type": "string"
    },
    "diskType": {
      "type": "string"
    },
    "diskCount": {
      "type": "int"
    },
    "diskSize": {
      "type": "int"
    },
    "mepVersion": {
      "type": "string"
    },
    "clusterName": {
      "type": "string"
    },
    "threeDotSubnetPrivate": {
      "type": "string"
    },
    "startOctet": {
      "type": "string"
    },
    "nodeCount": {
      "type": "int"
    },
    "serviceTemplate": {
      "type": "string"
    },
    "subnetRefPrivate": {
      "type": "string"
    }
  },
  "variables": {
    "computeApiVersion": "2017-03-30",
    "nodeCountSansInstaller": "[sub(parameters('nodeCount'), 1)]",
    "nonDotClusterName": "[replace(parameters('clusterName'), '.', '-')]",

    "maprdataDiskCache": "ReadOnly",
    "diskArray": [{
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 0,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    },
    {
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 1,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    },
    {
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 2,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    },
    {
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 3,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    },
    {
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 4,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    },
    {
      "diskSizeGB": "[parameters('diskSize')]",
      "lun": 5,
      "createOption": "Empty",
      "caching": "[variables('maprdataDiskCache')]"
    }]
  },
  "resources": [
    {
      "apiVersion": "[variables('networkApiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('maprnicName'), copyIndex())]",
      "location": "[resourceGroup().location]",
      "tags": {
        "cluster": "[variables('nonDotClusterName')]"
      },
      "copy": {
        "name": "nicopy",
        "count": "[parameters('nodeCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig', add(copyIndex(), 1))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(parameters('threeDotSubnetPrivate'), add(4, copyIndex()))]",
              "subnet": {
                "id": "[parameters('subnetRefPrivate')]"
              }
            }
          }
        ]
      }
    },

    {
      "apiVersion": "[variables('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('maprvmName'), '0')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('maprnicName'), 'a0'))]"
      ],
      "tags": {
        "Role": "MapR Cluster",
        "SubRole": "Installer and Server Node"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('instanceType')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('maprvmName'), '0')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('maprimageName')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "osType": "Linux",
            "name": "[concat(parameters('maprosDiskName'), '0')]",
            "managedDisk": {
              "storageAccountType": "[parameters('diskType')]"
            }
          },
          "dataDisks": "[take(variables('diskArray'), parameters('diskCount'))]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('maprnicName'), 'b0'))]"
            }
          ]
        }
      },
      "resources": [{
        "apiVersion": "[variables('computeApiVersion')]",
        "name": "run-installer",
        "type": "extensions",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[concat('Microsoft.Compute/virtualMachines/', parameters('maprvmName'), '0')]"
        ],
        "tags": {
          "displayName": "mapr-installer"
        },
        "properties": {
          "publisher": "Microsoft.Azure.Extensions",
          "type": "CustomScript",
          "typeHandlerVersion": "2.0",
          "autoUpgradeMinorVersion": true,
          "settings": {
            "fileUris": [
              "https://raw.githubusercontent.com/mapr/mapr-cloud-templates/master/1.6/azure/mapr-cloud-configure.sh"
            ]
          },
          "protectedSettings": {
            "commandToExecute": "[concat('bash mapr-cloud-configure.sh ', parameters('mepVersion'), ' ', parameters('clusterName'), ' ', parameters('maprPassword'), ' ', parameters('threeDotSubnetPrivate'), ' ', parameters('startOctet'), ' ', parameters('nodeCount'), ' ', parameters('serviceTemplate'), ' ', resourceGroup().name)]"
          }
        }
      }]
    },
    {
      "apiVersion": "[variables('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('maprvmName'), add(copyIndex(), 1))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "vmcopy",
        "count": "[variables('nodeCountSansInstaller')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('maprnicName'), add(copyIndex(), 1)))]"
      ],
      "tags": {
        "Role": "MapR Cluster",
        "SubRole": "Server Node"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('instanceType')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('maprvmName'), add(copyIndex(), 1))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('maprimageName')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "osType": "Linux",
            "name": "[concat(parameters('maprosDiskName'), add(copyIndex(), 1))]",
            "managedDisk": {
              "storageAccountType": "[parameters('diskType')]"
            }
          },
          "dataDisks": "[take(parameters('diskArray'), parameters('diskCount'))]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('maprnicName'), add(copyIndex(), 1)))]"
            }
          ]
        }
      }
    }
  ]
}